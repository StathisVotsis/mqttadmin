<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="mqttadmin.Pages.EditBrokerItemPage">
    <ContentPage.Content>
        <StackLayout>
            <TableView HasUnevenRows="true">
                <TableView.Root>
                    <TableSection Title="Broker Details">
                        <ViewCell>
                            <StackLayout Padding="20,0,0,0" HorizontalOptions="FillAndExpand" Orientation="Horizontal">
                                <Image Aspect="AspectFit" Source="icon.png" WidthRequest="70" HeightRequest="70" VerticalOptions="FillAndExpand" />
                            </StackLayout>
                        </ViewCell>
                        <EntryCell Label="HOST:" Text="{Binding Host, Mode=TwoWay}">
                        </EntryCell>
                        <EntryCell Label="PORT:" Text="{Binding Port, Mode=TwoWay}">
                        </EntryCell>
                        <EntryCell Label="USERNAME:" Text="{Binding Username, Mode=TwoWay}">
                        </EntryCell>
                        <EntryCell Label="PASSWORD:" Text="{Binding Password, Mode=TwoWay}">
                        </EntryCell>
                    </TableSection>
                </TableView.Root>
            </TableView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>